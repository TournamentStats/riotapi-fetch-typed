{
  "name": "riotapi-fetch-typed",
  "type": "module",
  "version": "1.0.1-dev",
  "description": "Fetch the Riot Games API with type safety, thanks to the OpenAPI specification.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate-types": "openapi-typescript https://www.mingweisamuel.com/riotapi-schema/openapi-3.0.0.yml -o src/types/openapi.d.ts",
    "build-no-gen": "tsup",
    "build": "pnpm generate-types && pnpm build-no-gen",
    "test": "vitest run",
    "lint": "eslint .",
    "format": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TournamentStats/riot-games-fetch-typed.git"
  },
  "keywords": [
    "riot games",
    "api",
    "typescript",
    "fetch"
  ],
  "author": "TournamentStats",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv": "^17.2.0",
    "eslint": "^9.30.1",
    "jiti": "^2.4.2",
    "ofetch": "^1.4.1",
    "openapi-typescript": "^7.8.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "brace-expansion@<=2.0.2": "2.0.2"
    }
  },
  "files": [
    "dist/"
  ]
}